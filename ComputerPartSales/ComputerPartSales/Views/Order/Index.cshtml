@using Entity.Entities
@model List<ComputerPartSaleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutComputer.cshtml";
}

@if (Model.Count == 0)
{
    <p>Herhangi bir sipariş bulunmamaktadır.</p>
}
else
{
    <table class="table">
    <thead>
        <tr>
                <th scope="col">Sipariş Tarihi</th>
                <th scope="col">Sipariş Adeti</th>
            <th scope="col">Sipariş Tutarı</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>


            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        <p>@item.Date.ToString("dd.MM.yyyy")</p>
                    </td>
                      <td>    
                                <p>@item.Quantity</p>

                    </td>
                    <td>
                        <h5>@item.Price.ToString("C")</h5>
                    </td>
                    <td>
                        <div class="product_count">

                            <a href="@Url.Action("OrderDetails", "Order", new { saleId = item.Id })" class="btn btn-primary">Detaylar</a>
                        </div>
                    </td>
                    <td>
                    </td>
                </tr>
            }
    </tbody>
    </table>
                  
}

        
