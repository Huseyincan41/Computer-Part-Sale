@using Entity.ViewModels
@model List<ComputerPartViewModel>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_LayoutComputer.cshtml";
}
<main class="site-main">
    <div class="container " style="height:700px;width:1100px">
        <div class="row no-gutters align-items-center " style="width:1100px;height:100%">
            <div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel" style="width:90%">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>

                </ol>
                <div class="carousel-inner" style="width:1100px;height:100%">
                    <div class="carousel-item active">
                        <img class="d-block w-100" style="height:500px" src="~/images/banner_1707076366f6a30a81c2b7a9aeeb4d8f8b2476432f.jpeg" alt="First slide">
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" style="height:500px" src="~/images/gn7ketbbzwyt88yp-0_0_desktop_0_1X.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" style="height:500px" src="~/images/thermalright-sivi-sogutucu-banner-20240704.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" style="height:500px" src="~/images/sinerji-1-1.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" style="height:500px" src="~/images/ayin-urunleri-kampanya-banner-506c3b.jpg" alt="Third slide">
                    </div>

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
<!-- ================ end banner area ================= -->
<!-- ================ category section start ================= -->
<section class="section-margin--small mb-5">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="sidebar-categories">
                    
                    @await Component.InvokeAsync("Category")
                    
                </div>
                <div class="sidebar-filter">
                </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-7">
                <!-- Start Filter Bar -->
                <div class="filter-bar d-flex flex-wrap ">
                    <div class="sorting">
                        <select>
                            <option value="1">Artan Fiyata Göre Sırala</option>
                            <option value="1">Azalan Fiyata Göre Sırala</option>
                            
                        </select>
                    </div>
                       
                     <div style="float:right">
                        <div style="float:right" class="input-group filter-bar-search">
                                <input type="text" placeholder="Arama" style="float:right">
                            <div class="input-group-append">
                                    <button style="float:right" type="button"><i class="ti-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Filter Bar -->
                <!-- Start Best Seller -->
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {

                        <form asp-controller="Home" asp-action="Detail" method="get">
                            <input type="hidden" name="ComputerPartId" value="@item.ComputerPartId" />
                            <div class="col-md-6 col-lg-4" style="float:left">
                                <div class="card text-center card-product">
                                    <div class="card-product__img">
                                        <img class="card-img" src="@item.ImageUrl" alt="">
                                        <ul class="card-product__imgOverlay">

                                            <li><button type="submit"><i class="ti-shopping-cart"></i></button></li>

                                        </ul>
                                    </div>
                                    <div class="card-body" style="width:100%">

                                        <p>@item.Name</p>

                                        <p>@item.Price</p>


                                    </div>
                                </div>
                            </div>
                        </form>

                    }
                }
                else
                {
                    <div class="alert alert-info custom-alert" role="alert">
                        <strong> İstenilen türde ürün bulunmamaktadır!</strong>
                    </div>
                }

                <!-- End Best Seller -->
            </div>
        </div>
    </div>
</section>
<!-- ================ category section end ================= -->
<!-- ================ top product area start ================= -->

<!-- ================ top product area end ================= -->
